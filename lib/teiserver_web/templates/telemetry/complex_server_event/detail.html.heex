<% bsname = view_colour() %>

<% timeframes = ["Today", "Yesterday", "7 days", "14 days", "31 days"] %>

<TeiserverWeb.Telemetry.TelemetryComponents.sub_menu
  active="complex_server_events"
  view_colour={view_colour()}
  current_user={@current_user}
/>

<div class="row section-menu">
  <div class="col-md-12">
    <div class={"card border-#{bsname}"}>
      <div class="card-body">
        <%= render(
          TeiserverWeb.Telemetry.ComplexServerEventView,
          "section_menu.html",
          Map.merge(assigns, %{
            quick_search: "",
            show_search: false,
            active: "event_detail"
          })
        ) %>
        <br /><br />

        <%= for key <- @schema_keys do %>
          <%= central_component("section_menu_button",
            name: "key-#{key}",
            label: key,
            active: "key-#{@key}",
            bsname: bsname,
            icon: "",
            url: "?key=#{key}&tf=#{@timeframe}"
          ) %>
        <% end %>
        &nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;
        <%= for tf <- timeframes do %>
          <%= central_component("section_menu_button",
            name: "tf-#{tf}",
            label: tf,
            active: "tf-#{@timeframe}",
            bsname: bsname,
            icon: "",
            url: "?key=#{@key}&tf=#{tf}"
          ) %>
        <% end %>

        <br /><br />

        <h4>Value counts for <%= @event_name %></h4>
        <table class="table table-sm">
          <thead>
            <tr>
              <th><%= @key %></th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <%= for {key, count} <- @server_data do %>
              <tr>
                <td><%= key %></td>
                <td><%= format_number(count) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
