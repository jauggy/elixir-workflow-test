<% bsname = view_colour() %>

<%= render(
  TeiserverWeb.Admin.GeneralView,
  "sub_menu.html",
  Map.merge(assigns, %{active: "badge_types"})
) %>

<div class="row section-menu">
  <div class="col-md-12">
    <div class={"card border-#{bsname}"}>
      <div class="card-body">
        <%= render(
          TeiserverWeb.Admin.BadgeTypeView,
          "section_menu.html",
          Map.merge(assigns, %{
            quick_search: "",
            show_search: false,
            active: "new"
          })
        ) %>

        <hr />

        <%= render(
          "form.html",
          Map.put(assigns, :action, Routes.ts_admin_badge_type_path(@conn, :create))
        ) %>
      </div>
    </div>
  </div>
</div>
